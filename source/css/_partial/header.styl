header
  padding-top 100px
  .logo
    a, a:link, a:visited, a:active
      border-bottom none
    margin 0 auto
    text-align center
    .logo-icon
      font-size 4rem
      color $mainColor1
      text-shadow $titleTextShadow
      @media $sm
        font-size 3rem
    img
      width 100px
      height 100px
      border-radius 50%
    .title
      font-size 3rem
      line-height 100px
      color $mainColor1
      font-family $fontTitle
      text-shadow $titleTextShadow
      @media $xs
        font-size 2rem
