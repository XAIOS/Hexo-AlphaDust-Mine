footer.footer-content
  width 100%
  padding-top 60px
  color $mainColor1
  text-align center
  background $bgColor
  border-top 1px dotted $mainColor1
  @media $xs
    padding-top 20px
  a, a:link, a:visited, a:active
    cursor pointer
    color $mainColor1
    text-decoration none
  h2
    font-family $fontTitle
    padding-bottom 20px
    font-size 1.5em
  ul
    list-style-type none
    padding-left 0
  .footer-about
    text-align left
    @media $sm
      text-align center
      section
        text-align center
        padding-bottom 30px


  .footer-social-icons
    margin 80px 0 50px 0
    @media $xs
      margin 30px 0 25px 0
  .footer-copyright
    margin-bottom 20px
    font-size 0.7em
